/**********************列表样式**********************/

/*空列表*/

.emptyView {
    width: 100%;
    height: 100%;
	box-sizing: border-box;
	padding-top: 40%;
    line-height: 40rpx;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}

/**********************基本按钮**********************/

/* 大按钮*/

.btn {
    width: calc(100% - 80rpx);
    height: 94rpx;
    line-height: 94rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: white;
    border-radius: 10rpx;
    background: #2973ff;
}

/*空心按钮*/
.btn_hollow {
    color: #2973ff !important;
	border: solid 1px #2973ff !important;
    background: #fff !important;
}

/*按钮 置灰*/

.btn_opacity {
    opacity: 0.4;
}

/*点击样式*/

.btn:active {
    background: rgba(0, 0, 0, 0.2);
}

/*固定在脚部的背景*/

.footer_bg {
    width: 100%;
    height: 174rpx;
    box-sizing: border-box;
	padding-top: 40rpx;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    background: #fff;
	z-index: 2;
}

/*按钮固定在脚部，页面主题可滚动*/

.btn_box {
    box-sizing: border-box;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 50rpx;
}

/**底部tab样式开始**/

.footer_tab {
    height: 99rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    color: #666;
    font-size: 20rpx;
}

.footer_tab_active {
    color: #ffb01d;
}

.footer_tab_item_icon {
    height: 54rpx;
    width: 54rpx;
    margin-bottom: 5rpx;
}

/**底部tab样式结束**/

/* 按钮固定在脚部*/

.footer_btn {
    position: fixed;
    bottom: 40rpx;
    margin-left: 0;
}

/*底线样式 *** 我是有底线的*/

.bottom_line {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #999;
    background: #f5f5f7;
}

/**********************公用样式**********************/

/*view标题*/

.viewTitle {
    width: 100%;
    height: 85rpx;
    line-height: 85rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.viewTitle .leftView, .rightView {
    flex: 1;
    height: 100%;
    line-height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.viewTitle .leftView {
    font-size: 26rpx;
    color: #333;
}

.viewTitle .leftView .line {
    width: 6rpx;
    height: 24rpx;
    border-radius: 1rpx;
    background-image: linear-gradient(135deg, #fde177, #ffb01d);
    background: -moz-linear-gradient(135deg, #fde177, #ffb01d);
    background: -webkit-linear-gradient(135deg, #fde177, #ffb01d);
    background: -o-linear-gradient(135deg, #fde177, #ffb01d);
    margin-right: 16rpx;
}

.viewTitle .rightView {
    justify-content: flex-end;
    width: 12rpx;
    height: 19rpx;
    margin-top: 33rpx;
}

/*view 列表 左右布局*/

.itemView {
    width: 100vw;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    flex-direction: row;
	align-items: center;
	justify-content: space-between;
}

.itemView .item_left {
    padding-left: 40rpx;
    text-align: left;
}

.itemView .item_right {
    padding-right: 40rpx;
    text-align: right;
}

/*最后一行or循环最后一行 去掉边框*/

.itemView:last-child, .last_item {
    border-bottom: none;
}

/**图片**/

image {
    height: 100%;
    width: 100%;
    display: block;
}

.radius_image {
    height: 100%;
    width: 100%;
    display: block;
    border-radius: 50%;
}

/*右侧箭头*/

.iconRight {
    width: 16rpx;
    height: 26rpx;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 32rpx;
    padding-right: 30rpx;
}

.right_icon {
    width: 16rpx;
    height: 26rpx;
}

.right_arrow {
    width: 7rpx;
    height: 14rpx;
}

/**********************弹窗**********************/

/*弹框遮罩*/

.dialog {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    text-align: center;
    font-size: 30rpx;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
}

/*弹框*/

.dialogView {
    background: #fff;
    width: 80vw;
    height: auto;
    /* min-height: 364rpx; */
    position: relative;
    left: 10vw;
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
}

/*弹框标题*/

.dialogView_title {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    font-size: 32rpx;
}

/*弹框内容*/

.dialogView_content {
    width: calc(100% - 64rpx);
    height: auto;
    line-height: 36rpx;
    padding: 32rpx;
    font-size: 30rpx;
    color: #666;
}

/*弹窗底部*/

.dialogView_bottom {
    width: 100%;
    height: 94rpx;
    display: flex;
    flex-direction: row;
    border-top: solid 1rpx #e5e5e5;
}

/**placeholder**/

.placeholder {
    color: #999;
    font-size: 28rpx;
}

/*按扭*/

.dialogView_btn {
    flex: 1;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    text-align: center;
}

.dialogView_btn:nth-child(2) {
    border-left: solid 1rpx #e5e5e5;
    color: #ffb72a;
}

