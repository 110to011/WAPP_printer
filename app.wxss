/**app.wxss**/

/*主布局*/

.pageView {
    width: 100vw;
    height: 100%;
    min-height: 100vh;
    box-sizing: border-box;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    background-color: #efeff4;
    font-size: 28rpx;
    color: #333;
    position: relative;
}

.container {
    width: calc(100vw - 64rpx);
    margin: 0 auto;
}

.wrapper {
    box-sizing: border-box;
    padding: 0 32rpx;
}

